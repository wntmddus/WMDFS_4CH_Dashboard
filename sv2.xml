  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_sv2.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.sv2, clean.artifact.sv2" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.sv2" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.sv2" value="${basedir}/out/artifacts/SV2"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.SV2" value="${artifacts.temp.dir}/SV2.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.sv2" description="clean SV2 artifact output">
    <delete dir="${artifact.output.sv2}"/>
  </target>
  
  <target name="artifact.sv2" depends="init.artifacts, compile.module.sv2" description="Build &#39;SV2&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.sv2}"/>
    <copy todir="${artifact.temp.output.SV2}">
      <fileset dir="${sv2.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_SV2" dir="${artifact.temp.output.SV2}" includes="**/*.jar">
      <exclude name="SV2.jar"/>
    </fx:fileset>
    <fx:fileset id="all_SV2" dir="${artifact.temp.output.SV2}" includes="**/*.jar"/>
    <fx:application id="SV2_id" name="SV2" mainClass="com.Main"/>
    <fx:jar destfile="${artifact.temp.output.SV2}/SV2.jar">
      <fx:application refid="SV2_id"/>
      <fileset dir="${artifact.temp.output.SV2}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_SV2"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="SVDashboard"/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value="SV"/>
      </manifest>
    </fx:jar>
    <fx:deploy width="1920" height="1080" updatemode="background" outdir="${artifact.temp.output.SV2}/deploy" outfile="SV2" nativeBundles="all">
      <fx:application refid="SV2_id"/>
      <fx:info title="SVDashboard" vendor="SV"/>
      <fx:resources>
        <fx:fileset refid="all_SV2"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.sv2}">
      <fileset dir="${artifact.temp.output.SV2}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.SV2}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.sv2" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
